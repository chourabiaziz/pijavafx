<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.ChatbotController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <TextArea fx:id="chatArea" editable="false" prefHeight="400" prefWidth="300" />
    <TextField fx:id="inputField" promptText="Type your message..." />
    <Button text="Send" onAction="#sendMessage"/>
</VBox>
