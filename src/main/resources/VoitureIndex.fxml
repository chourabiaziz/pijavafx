<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane fx:id="mainAnchorPane" prefHeight="715.0" prefWidth="600.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.VoitureIndex">
    <children>
        <!-- En-tête -->
        <Text layoutX="194.0" layoutY="20.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Liste des Voitures" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #333;">
            <font>
                <Font name="Arial" size="24.0" />
            </font>
        </Text>

        <!-- Champ de recherche -->
        <TextField fx:id="searchField" layoutX="10.0" layoutY="40.0" prefWidth="580.0" promptText="Recherche..." style="-fx-font-size: 14px; -fx-padding: 10;"/>

        <!-- Grille pour la disposition des éléments -->
        <GridPane layoutX="10" layoutY="100.0" prefHeight="585.0" prefWidth="580.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="100.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" minHeight="10.0" prefHeight="100.0" />
            </rowConstraints>
            <!-- Conteneur pour les cartes de voitures -->
            <TilePane fx:id="tilePane" GridPane.columnIndex="0" GridPane.rowIndex="0" prefColumns="2" style="-fx-padding: 10;" vgap="20" hgap="20">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </TilePane>

            <!-- Espace réservé pour d'autres éléments -->
            <VBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-padding: 20;" />
        </GridPane>

        <!-- Bouton d'ajout -->
        <Button fx:id="ajouterButton" layoutX="10.0" layoutY="660.0" mnemonicParsing="false" onAction="#goToAjouterVoiture" text="Ajouter une nouvelle voiture" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10;"/>
    </children>
</AnchorPane>
