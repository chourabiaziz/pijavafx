<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-image: url('backhround.png'); -fx-background-size: cover;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.AjouterAtelierAdmin">
    <children>
        <!-- Titre principal -->
        <Label layoutX="200.0" layoutY="20.0" text="Ajouter un Atelier" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;">
            <font>
                <Font name="Arial" size="24.0" />
            </font>
        </Label>

        <!-- Champs de formulaire avec leurs étiquettes -->
        <Label layoutX="50.0" layoutY="70.0" text="Nom :" style="-fx-text-fill: white; -fx-font-size: 16px;" />
        <Label layoutX="50.0" layoutY="120.0" text="Adresse :" style="-fx-text-fill: white; -fx-font-size: 16px;" />
        <Label layoutX="50.0" layoutY="170.0" text="Téléphone :" style="-fx-text-fill: white; -fx-font-size: 16px;" />
        <Label layoutX="50.0" layoutY="220.0" text="Spécialité :" style="-fx-text-fill: white; -fx-font-size: 16px;" />
        <Label layoutX="50.0" layoutY="270.0" text="Avis :" style="-fx-text-fill: white; -fx-font-size: 16px;" />
        <Label layoutX="50.0" layoutY="320.0" text="Heure d'ouverture :" style="-fx-text-fill: white; -fx-font-size: 16px;" />
        <Label layoutX="50.0" layoutY="370.0" text="Heure de fermeture :" style="-fx-text-fill: white; -fx-font-size: 16px;" />

        <TextField fx:id="nomTextField" layoutX="200.0" layoutY="70.0" style="-fx-background-color: rgba(255, 255, 255, 0.7); -fx-font-size: 14px; -fx-padding: 10;" />
        <TextField fx:id="adresseTextField" layoutX="200.0" layoutY="120.0" style="-fx-background-color: rgba(255, 255, 255, 0.7); -fx-font-size: 14px; -fx-padding: 10;" />
        <TextField fx:id="telephoneTextField" layoutX="200.0" layoutY="170.0" style="-fx-background-color: rgba(255, 255, 255, 0.7); -fx-font-size: 14px; -fx-padding: 10;" />
        <TextField fx:id="specialiteTextField" layoutX="200.0" layoutY="220.0" style="-fx-background-color: rgba(255, 255, 255, 0.7); -fx-font-size: 14px; -fx-padding: 10;" />
        <TextField fx:id="avisTextField" layoutX="200.0" layoutY="270.0" style="-fx-background-color: rgba(255, 255, 255, 0.7); -fx-font-size: 14px; -fx-padding: 10;" />
        <TextField fx:id="heureOuvertureTextField" layoutX="200.0" layoutY="320.0" style="-fx-background-color: rgba(255, 255, 255, 0.7); -fx-font-size: 14px; -fx-padding: 10;" />
        <TextField fx:id="heureFermetureTextField" layoutX="200.0" layoutY="370.0" style="-fx-background-color: rgba(255, 255, 255, 0.7); -fx-font-size: 14px; -fx-padding: 10;" />


        <!-- Boutons d'action -->
        <Button layoutX="400.0" layoutY="420.0" mnemonicParsing="false" onAction="#ajouterAtelier" text="Ajouter" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10;" />
        <Button layoutX="270.0" layoutY="420.0" mnemonicParsing="false" onAction="#allerAListeAteliers" text="Liste des Ateliers" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10;" />
    </children>
</AnchorPane>
